<h1>Listing domains</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Actions</th>
  </tr>

<% @domains.each do |domain| %>
  <tr>
    <td><%= domain.name %></td>
    <td><%= link_to 'Show', [:admin, domain] %> |
        <%= link_to 'Edit', edit_admin_domain_path(domain) %> |
        <%= link_to 'Destroy', [:admin, domain], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<%- end -%>
</table>

<br />

<%= link_to 'New Domain', new_admin_domain_path %>
