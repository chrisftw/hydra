<h1>Listing sites</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Active</th>
    <th>Actions</th>
    <th></th>
    <th></th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%= site.name %></td>
    <td><%= site.active %></td>
    <td><%= link_to 'Show', [:admin, site] %> |
        <%= link_to 'Edit', edit_admin_site_path(site) %> |
        <%= link_to 'Destroy', [:admin, site], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

